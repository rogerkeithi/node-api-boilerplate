FROM node:23-alpine

RUN npm install -g ts-node nodemon typescript

WORKDIR /app

COPY ./services /app

WORKDIR /app/shared
COPY ./services/shared/package*.json ./
RUN npm install

WORKDIR /app/auth-service
COPY ./services/auth-service/package*.json ./
RUN npm install

COPY ./services/auth-service/nodemon.json ./

EXPOSE 4000

CMD ["npm", "run", "dev"]
